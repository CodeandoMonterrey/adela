.container
  .card.padding-top.margin-top
    %h5.primary
      Designación de Enlace y Administrador de Datos Abiertos
    %p
      Carga el oficio de designación del Enlace y Administrador de Datos Abiertos de tu institución y la minuta del Consejo Intitucional de Datos Abiertos.
    .card.bg--grey.padding-top.margin-top
      = form_for current_organization, url: update_organization_documents_path, method: :put do |f|
        = f.fields_for :designation_files, current_organization.designation_files.build do |designation_file_form|
          .form-group
            %label.strong Selecciona el archivo del Oficio de Designación *
            = designation_file_form.file_field :file
        = f.fields_for :memo_files, current_organization.memo_files.build  do |memo_file_form|
          .form-group
            %label.strong Selecciona el archivo de la Minuta de Autorizaci&oacute;n del Grupo de Trabajo
            = memo_file_form.file_field :file
        %p
          * Campos obligatorios
        .form-group
          %button.btn.btn-primary{ type: 'submit' } Subir oficios

  - if current_organization.designation_files.select(&:persisted?).present?
    .card.padding-top.margin-top
      %h5.primary
        Oficios de designación del Enlace y Administrador de Datos Abiertos
        %br
        - current_organization.designation_files.select(&:persisted?).each do |designation_file|
          .media
            = link_to designation_file.file.url do
              .media-body
                %h4.media-heading
                  %span.glyphicon.glyphicon-file{ 'aria-hidden' => 'true' }
                  #{File.basename(designation_file.file.path)}
                %p
                  %span.label.label-default #{designation_file.created_at.strftime('%F')}
                  %span.label.label-default #{number_to_human_size(designation_file.file.size)}
                  %span.label.label-success Descargar

  - if current_organization.memo_files.select(&:persisted?).present?
    .card.padding-top.margin-top
      %h5.primary
        Minutas del Consejo Intitucional de Datos Abiertos
        %br
        - current_organization.memo_files.select(&:persisted?).each do |memo_file|
          .media
            = link_to memo_file.file.url do
              .media-body
                %h4.media-heading
                  %span.glyphicon.glyphicon-file{ 'aria-hidden' => 'true' }
                  #{File.basename(memo_file.file.path)}
                %p
                  %span.label.label-default #{memo_file.created_at.strftime('%F')}
                  %span.label.label-default #{number_to_human_size(memo_file.file.size)}
                  %span.label.label-success Descargar
