.user-form-wrapper
  = custom_devise_error_messages!
  .row
    .col-md-4
    .user-form.col-md-4
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        %h2.user-form-heading REGÍSTRATE

        = f.label :email
        = f.email_field :email, :autofocus => true, :placeholder => "Correo electrónico"

        = f.label :name
        = f.text_field :name, :placeholder => "Nombre"

        = f.label :password
        = f.password_field :password, :placeholder => "Contraseña", :autocomplete => "off"

        = f.label :password_confirmation
        = f.password_field :password_confirmation, :placeholder => "Contraseña", :autocomplete => "off"

        = f.submit "Regístrate", :class => "btn button btn-block"

        = render "devise/shared/links"
    .col-md-4
