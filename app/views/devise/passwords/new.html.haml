.container
  = custom_devise_error_messages!
  .card
    %h3.title ¿Olvidaste tu contraseña?
    %h5.subtitle
      %span Ingresa tu correo electrónico para recuperar tu contraseña
    = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
      .form-group
        = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => "Correo electrónico"
      .form-group
        = f.submit 'Enviar', class: 'btn btn-primary'
