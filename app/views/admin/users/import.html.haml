          = label_tag "Archivo CSV"
          %br/
          = file_field_tag :csv_file
          %br/
          %small
            AsegÃºrate de que contenga las columnas:
            %strong "nombre", "email", "organizacion"
          %br/
          = submit_tag "Importar usuarios", :class => "btn button"
          = link_to 'Cancelar', admin_users_path, :class => "btn cancel button"
        %hr/
