= form_for([:admin, @user], html: {class: "form-horizontal"}) do |f|
  .form-group.text-right
    = f.label :name, :class => "control-label col-sm-3"
    .col-sm-9
      = f.text_field :name, :class => "form-control"
  .form-group.text-right
    = f.label :email, :class => "control-label col-sm-3"
    .col-sm-9
      = f.text_field :email, :class => "form-control"
  .form-group.text-right
    = f.label :organization, :class => "control-label col-sm-3"
    .col-sm-9
      = f.select :organization_id, options_for_organizations_select, { :include_blank => true }, { :class => "form-control" }
  .form-group
    .submit-row.col-sm-offset-3.col-sm-9.text-left
      = link_to 'Cambiar ContraseÃ±a', edit_password_admin_user_path(@user), :class => "btn button" unless @user.new_record?
    .submit-row.col-sm-offset-3.col-sm-9.text-right
      = link_to 'Cancelar', admin_users_path, :class => "btn cancel button"
      = f.button "Guardar", :type => "submit", :class => "btn button"
